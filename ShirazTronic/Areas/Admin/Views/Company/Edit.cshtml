@model CompanyInfos
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 box-info">
        <h2>Edit Category</h2>
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Category Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <label asp-for="EMail"></label>
                        <input asp-for="EMail" class="form-control" type="email">
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <label asp-for="TelNo"></label>
                        <input asp-for="TelNo" class="form-control" type="tel">
                        <span asp-validation-for="TelNo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <label asp-for="Address"></label>
                        <textarea asp-for="Address" class="form-control" style="resize:none" rows="4"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-lg-8 col-md-6">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" style="resize:none" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-success" asp-action="Index">Back</a>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

