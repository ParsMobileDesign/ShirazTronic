<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShirazTronic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/DataTables/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin-dashboard-styles.css" />
    <link rel="stylesheet" href="~/css/all.css" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <div>
            <a class="navbar-brand" asp-action="Index" asp-area="Admin" asp-controller="Home">Admin Dashboard</a>
            <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Activity Log</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="login.html">Logout</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-action="Index" asp-area="Admin" asp-controller="Home">
                            <div class="sb-nav-link-icon"> <i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a><a class="nav-link" asp-action="Index" asp-controller="Company" asp-area="Admin">
                            <div class="sb-nav-link-icon"><i class="far fa-building"></i></div>
                            Company Info
                        </a>

                        <a class="nav-link" asp-action="Index" asp-area="Customer" asp-controller="Home">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-sliders-h"></i>
                            </div>
                            Site
                        </a>
                        <div class="sb-sidenav-menu-heading">Settings</div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseSettings" aria-expanded="true" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Settings
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse show" id="collapseSettings" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Category">Category</a>
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="SubCategory">Sub Category</a>
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Convert">Convert</a>
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Specification">Specification</a>
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="SpecificationValue">Specification Value</a>
                                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="User">Users</a>

                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseProduct" aria-expanded="true" aria-controls="collapseProduct">
                            <div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div>
                            Products
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse show" id="collapseProduct" aria-labelledby="headingTwo" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-action="Index" asp-area="Admin" asp-controller="Product">Products</a>
                                </nav>
                            </nav>
                        </div>
                        <div class="sb-sidenav-menu-heading">Addons</div>
                        <a class="nav-link" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Charts
                        </a>
                        <a class="nav-link" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Tables
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Unknown
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </main>
            <footer class="py-3 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Pars Mobile Design 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script src="~/js/admin-dashboard-script.js"></script>
    @RenderSection("Scripts", false);
</body>
</html>
