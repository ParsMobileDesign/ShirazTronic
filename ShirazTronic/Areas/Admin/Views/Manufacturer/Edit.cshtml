@model Manufacturer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 box-info">
        <h2>Edit Manufacturer</h2>
        <form method="post" asp-action="Save" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Category Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" id="files" class="custom-file-input" asp-for="Logo">
                            <label class="custom-file-label" asp-for="Logo">Choose file...</label>
                            <div class="invalid-feedback">Example invalid custom file feedback</div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-4 d-flex justify-content-center">
                    @{
                        var base64 = Convert.ToBase64String(Model.Logo);
                        var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);
                    }
                    <img alt="Category Image" src="@imgsrc" style="max-width:200px" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-success" asp-action="Index">Back</a>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

