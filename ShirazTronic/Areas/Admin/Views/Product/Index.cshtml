@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="row bg-white rounded">
    <div class="col-6"><h2>Products</h2></div>
    <div class="col-6 text-right">
        <partial name="_CreateButton" />
    </div>
</div>
<div class="row">
    <table class="table table-striped table-bordered table-sm custom-data-table" style="width:100%">
        <thead>
            <tr class="table-secondary">
                <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.ShortDescription)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.StockQuantity)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.NotifyQuantityBelow)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.BuyingPrice)</th>
                <th scope="col">Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => product.Title)</td>
                    <td>@Html.DisplayFor(m => product.ShortDescription)</td>
                    <td>@Html.DisplayFor(m => product.StockQuantity)</td>
                    <td>@Html.DisplayFor(m => product.NotifyQuantityBelow)</td>
                    <td>@Html.DisplayFor(m => product.BuyingPrice)</td>
                    <td><partial name="_TableEditDeleteButtons" model="product.Id" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>
