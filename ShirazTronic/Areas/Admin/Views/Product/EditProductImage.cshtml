@model ShirazTronic.Models.ProductImage
@{
    ViewData["Title"] = "Edit Product Image";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Edit Product Image</h3>
        </div>
        <div class="card-body">
            <form asp-action="SaveProductImage" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" name="ProductImageIdentifi" />
                <input type="hidden" asp-for="ProductId" />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="ImageAddr"></label>
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ProductId">Back</a>
            </form>
        </div>
    </div>
</div>
