@page
@using ShirazTronic;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group form-row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <label asp-for="Input.FName"></label>
                        <input asp-for="Input.FName" class="form-control" />
                        <span asp-validation-for="Input.FName" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <label asp-for="Input.LName"></label>
                        <input asp-for="Input.LName" class="form-control" />
                        <span asp-validation-for="Input.LName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-6">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="col-lg-2 col-md-3 col-sm-4">
                        <label asp-for="Input.City"></label>
                        <input asp-for="Input.City" class="form-control" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4">
                        <label asp-for="Input.State"></label>
                        <input asp-for="Input.State" class="form-control" />
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4">
                        <label asp-for="Input.PostalCode"></label>
                        <input asp-for="Input.PostalCode" class="form-control" />
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <label asp-for="Input.Address"></label>
                        <textarea class="form-control" asp-for="Input.Address" rows="3"></textarea>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                </div>
                @if (User.IsInRole(ShirazTronic.Utility.ManagerUser))
                {
                    <div class="form-group form-row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <input id="rdCustomer" type="radio" name="role" value="@Utility.CustomerUser" />
                            <label for="rdCustomer">Customer</label>
                            <input id="rdController" type="radio" name="role" value="@Utility.ControllerUser" checked />
                            <label for="rdController">Controller</label>
                            <input id="rdManager" type="radio" name="role" value="@Utility.ManagerUser" />
                            <label for="rdManager">Manager</label>

                        </div>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
